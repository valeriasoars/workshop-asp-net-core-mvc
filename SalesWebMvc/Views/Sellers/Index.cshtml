@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Selles";
}

<h2>@ViewData["Title"]</h2>
<h4>Seller's list</h4>
<p>
    <a class="btn btn-outline-primary rounded" asp-action="Create" class="btn btn-dark">Create new</a>
</p>

<table class="table table-striped table-hover" >
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th class="d-flex justify-content-end">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td class="d-flex justify-content-end">
                    <a class="btn btn-primary rounded m-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info rounded m-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger rounded m-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>



</table>